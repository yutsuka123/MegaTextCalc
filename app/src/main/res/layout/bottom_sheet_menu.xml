<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/menu_title"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/settings_title"
        android:textAlignment="textStart"
        app:icon="@android:drawable/ic_menu_preferences"
        app:iconGravity="start" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManual"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/manual_title"
        android:textAlignment="textStart"
        app:icon="@android:drawable/ic_menu_help"
        app:iconGravity="start" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDonate"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/donate_title"
        android:textAlignment="textStart"
        app:icon="@android:drawable/ic_menu_share"
        app:iconGravity="start" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDisclaimer"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/disclaimer_title"
        android:textAlignment="textStart"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconGravity="start" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPrivacyPolicy"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="プライバシーポリシー"
        android:textAlignment="textStart"
        app:icon="@android:drawable/ic_menu_info_details"
        app:iconGravity="start" />

    <!-- バージョン情報ボタン -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVersionInfo"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="バージョン情報"
        android:textAlignment="textStart"
        app:icon="@android:drawable/ic_menu_info_details"
        app:iconGravity="start" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClose"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/close"
        app:icon="@android:drawable/ic_menu_close_clear_cancel"
        app:iconGravity="start" />

    <!-- バージョン情報表示 -->
    <TextView
        android:id="@+id/tvVersionInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Version: -"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray" />

</LinearLayout>
